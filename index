<script>
const questions=[
 {q:"‚Äò‡¨ú‡¨®‡≠ç‡¨Æ‡¨≠‡≠Å‡¨Æ‡¨ø‚Äô ‡¨ï‡¨¨‡¨ø‡¨§‡¨æ‡¨∞ ‡¨ï‡¨¨‡¨ø ‡¨ï‡¨ø‡¨è ?",opts:["‡¨∞‡¨æ‡¨ß‡¨æ‡¨®‡¨æ‡¨• ‡¨∞‡¨æ‡≠ü","‡¨ó‡≠ã‡¨™‡¨æ‡¨≥ ‡¨ö‡¨®‡≠ç‡¨¶‡≠ç‡¨∞ ‡¨™‡≠ç‡¨∞‡¨π‡¨∞‡¨æ‡¨ú","‡¨ï‡¨≥‡¨ø‡¨ï‡¨æ‡¨¶‡¨æ‡¨∏","‡¨ó‡≠ã‡¨™‡¨æ‡¨≥‡¨ï‡≠É‡¨∑‡≠ç‡¨£ ‡¨™‡¨£‡¨ø‡¨ó‡≠ç‡¨∞‡¨æ‡¨π‡≠Ä"],ans:3},
 {q:"‚Äò‡¨ú‡¨®‡≠ç‡¨Æ‡¨≠‡≠Å‡¨Æ‡¨ø‚Äô ‡¨∂‡¨¨‡≠ç‡¨¶‡¨∞ ‡¨Ö‡¨∞‡≠ç‡¨• ‡¨ï‡¨£ ?",opts:["‡¨ú‡¨®‡≠ç‡¨Æ ‡¨®‡¨ø‡¨Ü‡¨Ø‡¨æ‡¨á‡¨•‡¨ø‡¨¨‡¨æ ‡¨¶‡≠á‡¨∂","‡¨∏‡≠ç‡≠±‡¨∞‡≠ç‡¨ó","‡¨ó‡¨æ‡¨Å","‡¨™‡¨∞ ‡¨¶‡≠á‡¨∂"],ans:0},
];

function toOdiaNum(num){const d=['‡≠¶','‡≠ß','‡≠®','‡≠©','‡≠™','‡≠´','‡≠¨','‡≠≠','‡≠Æ','‡≠Ø'];return String(num).split('').map(x=>d[x]||x).join('');}

let current=0,correct=0,answersMap={},startTime=Date.now();
const quiz=document.getElementById('quiz');

function loadQuestion(){
  const q=questions[current];
  quiz.innerHTML=`<div class="question" style="display:block">
  <div class="qtitle">‡¨™‡≠ç‡¨∞‡¨∂‡≠ç‡¨® ${toOdiaNum(current+1)}. ${q.q}</div>
  <div class="options">${q.opts.map((o,i)=>`<div class="opt" onclick="selectOption(${i},this)">${o}</div>`).join('')}</div>
  </div>`;
  updateStatus();
}
function selectOption(i,el){
  document.querySelectorAll('.opt').forEach(o=>o.classList.remove('selected'));
  el.classList.add('selected');
  answersMap[current]=i;
}
function updateStatus(){
  const attempted=Object.keys(answersMap).length;
  const remaining=questions.length-attempted;
  document.getElementById('status').innerText=`‡¨ö‡≠á‡¨∑‡≠ç‡¨ü‡¨æ ‡¨ï‡¨∞‡¨æ‡¨Ø‡¨æ‡¨á‡¨õ‡¨ø : ${toOdiaNum(attempted)} | ‡¨¨‡¨æ‡¨ï‡≠Ä : ${toOdiaNum(remaining)}`;
  const progress=(attempted/questions.length)*100;
  document.getElementById('progress-bar').style.width=progress+'%';
}
function nextQuestion(){
  if(answersMap[current]===undefined){alert("‡¨â‡¨§‡≠ç‡¨§‡¨∞ ‡¨ö‡≠ü‡¨® ‡¨ï‡¨∞‡¨®‡≠ç‡¨§‡≠Å");return;}
  if(answersMap[current]===questions[current].ans)correct++;
  current++;
  if(current<questions.length)loadQuestion();
  else finishExam();
}
function prevQuestion(){if(current>0){current--;loadQuestion();}}

function finishExam(){
  const total=questions.length;
  const wrong=total-correct;
  const percent=Math.round((correct/total)*100);
  const timeTakenSec=Math.round((Date.now()-startTime)/1000);
  const mins=Math.floor(timeTakenSec/60),secs=timeTakenSec%60;
  const time=`${toOdiaNum(mins)} ‡¨Æ‡¨ø‡¨®‡¨ø‡¨ü‡≠ç ${toOdiaNum(secs)} ‡¨∏‡≠á‡¨ï‡≠á‡¨£‡≠ç‡¨°`;

  // hide quiz area
  quiz.style.display='none';
  document.querySelector('.controls').style.display='none';
  document.getElementById('progress-container').style.display='none';
  document.getElementById('status').style.display='none';

  // show results
  document.getElementById('results').style.display='block';
  document.getElementById('resultTitle').innerText = percent>=50 ? "üéâ ‡¨Ö‡¨≠‡¨ø‡¨®‡¨®‡≠ç‡¨¶‡¨®! üéâ" : "‡¨™‡¨∞‡¨ø‡¨£‡¨æ‡¨Æ";
  document.getElementById('scoreDetails').innerText = `‡¨∏‡¨†‡¨ø‡¨ï‡≠ç : ${toOdiaNum(correct)} | ‡¨≠‡≠Å‡¨≤ : ${toOdiaNum(wrong)} | ‡¨Æ‡≠ã‡¨ü : ${percent}%`;
  document.getElementById('timeTaken').innerText = `‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨∏‡¨Æ‡≠ü : ${time}`;
  document.getElementById('message').innerText = percent>=50 ?
    "‡¨Ü‡¨™‡¨£ ‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ‡¨∞‡≠á ‡¨≠‡¨≤ ‡¨™‡¨∞‡¨ø‡¨£‡¨æ‡¨Æ ‡¨™‡¨æ‡¨á‡¨õ‡¨®‡≠ç‡¨§‡¨ø!" :
    "‡¨Ü‡¨™‡¨£ ‡¨Ö‡¨ß‡¨ø‡¨ï ‡¨≠‡¨≤ ‡¨™‡¨∞‡¨ø‡¨£‡¨æ‡¨Æ ‡¨™‡¨æ‡¨á‡¨¨‡¨æ ‡¨™‡¨æ‡¨á‡¨Å ‡¨™‡≠Å‡¨£‡¨ø ‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨¶‡¨ø‡¨Ö‡¨®‡≠ç‡¨§‡≠Å ‡•§";

  // Save result for sharing
  window.examResult = {correct, wrong, percent, time};
}

function toggleAnswers(){
  const ansDiv=document.getElementById('answersList');
  if(ansDiv.style.display==="block"){ansDiv.style.display="none";return;}
  ansDiv.innerHTML="";
  questions.forEach((q,i)=>{
    const given=answersMap[i];
    const correctIndex=q.ans;
    const isRight=given===correctIndex;
    const userAns=given!==undefined?q.opts[given]:"‚ùå ‡¨â‡¨§‡≠ç‡¨§‡¨∞ ‡¨¶‡¨ø‡¨Ü‡¨Ø‡¨æ‡¨á‡¨®‡¨æ‡¨π‡¨ø‡¨Å";
    ansDiv.innerHTML+=`
      <div class="answer-block">
        <div><b>‡¨™‡≠ç‡¨∞‡¨∂‡≠ç‡¨® ${toOdiaNum(i+1)}:</b> ${q.q}</div>
        <div>‡¨Ü‡¨™‡¨£‡¨ô‡≠ç‡¨ï ‡¨â‡¨§‡≠ç‡¨§‡¨∞: <span class="${isRight?'correct':'wrong'}">${userAns}</span></div>
        <div>‡¨∏‡¨†‡¨ø‡¨ï‡≠ç ‡¨â‡¨§‡≠ç‡¨§‡¨∞: <span class="correct">${q.opts[correctIndex]}</span></div>
      </div>`;
  });
  ansDiv.style.display="block";
}

// Share result button
function shareResult(){
  const shareLink = "https://y.com"; // üîó change this to your quiz URL
  const r = window.examResult;
  if(!r){alert("‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨™‡≠ç‡¨∞‡¨•‡¨Æ‡≠á ‡¨∂‡≠á‡¨∑ ‡¨ï‡¨∞‡¨®‡≠ç‡¨§‡≠Å!");return;}
  const text = `üìò ‡¨Æ‡≠ã ‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨´‡¨≥‡¨æ‡¨´‡¨≥:\n‡¨∏‡¨†‡¨ø‡¨ï‡≠ç: ${toOdiaNum(r.correct)} | ‡¨≠‡≠Å‡¨≤: ${toOdiaNum(r.wrong)} | ‡¨Æ‡≠ã‡¨ü: ${r.percent}%\n‡¨∏‡¨Æ‡≠ü: ${r.time}\n\n‡¨Ü‡¨™‡¨£‡¨Æ‡¨ß‡≠ç‡≠ü ‡¨è‡¨π‡¨ø ‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨¶‡¨ø‡¨Ö‡¨®‡≠ç‡¨§‡≠Å üëâ ${shareLink}`;

  if(navigator.share){
    navigator.share({
      title:"‡¨Æ‡≠ã ‡¨™‡¨∞‡≠Ä‡¨ï‡≠ç‡¨∑‡¨æ ‡¨∏‡¨æ‡¨•‡≠Ä",
      text:text,
      url:shareLink
    }).catch(()=>{});
  }else{
    navigator.clipboard.writeText(text);
    alert("üìã ‡¨Ü‡¨™‡¨£‡¨ô‡≠ç‡¨ï ‡¨´‡¨≥‡¨æ‡¨´‡¨≥ ‡¨≤‡¨ø‡¨ô‡≠ç‡¨ï‡≠ç ‡¨ï‡¨™‡¨ø ‡¨π‡≠ã‡¨á‡¨ó‡¨≤‡¨æ ‡•§ ‡¨Ü‡¨™‡¨£ ‡¨Ü‡¨™‡¨£‡¨ô‡≠ç‡¨ï ‡¨∏‡¨ô‡≠ç‡¨ó‡¨Æ‡¨æ‡¨®‡¨ô‡≠ç‡¨ï‡≠Å ‡¨™‡¨†‡¨æ‡¨á‡¨™‡¨æ‡¨∞‡¨ø‡¨¨‡≠á!");
  }
}

loadQuestion();
</script>
